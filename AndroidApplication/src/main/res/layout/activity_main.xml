<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_175sdp"
        app:srcCompat="@drawable/home3" />

    <TextView
        android:id="@+id/text1"
        android:paddingTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Decorate Your Home "

        android:textAlignment="center"
        android:textColor="#7CE80E0E"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"

         />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Just Choose What You Want "

        android:textColor="#F44336"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
     />

    <Button
        android:id="@+id/addColor"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@color/purble"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Add a color to your room"
        android:textSize="@dimen/_10sdp"
         />

    <Button
        android:id="@+id/addFurniture"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@color/purble"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/_10sdp"
        android:text="Add a furniture or draw on the wall"
        />

    <Button
        android:id="@+id/addDecoration"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:background="@color/purble"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Add A wallpaper or A portrait"
        android:textSize="@dimen/_10sdp"
         />


</LinearLayout>

